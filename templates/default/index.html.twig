{% extends 'base.html.twig' %}

{% block header_title %}
    <div><h2>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h2></div>
{% endblock %}
{% block header_img %}<img class="slide-image" src="{{ asset('../public/img/todolist_homepage.jpg') }}" alt="todo list">{% endblock %}

{% block body %}

    <div class="row">
        <a href="{{ path('task_create') }}" class="btn btn-success  col-md-4">Créer une nouvelle tâche</a>
        <a href="{{ path('task_list') }}" class="btn btn-info col-md-4">Consulter la liste des tâches à faire</a>
        <a href="{{ path('task_list_done') }}" class="btn btn-warning col-md-4">Consulter la liste des tâches terminées</a>
    </div>
{% endblock %}
